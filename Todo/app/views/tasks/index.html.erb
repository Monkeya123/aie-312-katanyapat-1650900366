<h1>Todos</h1>

<%= form_with(model: @task, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.submit 'Create Todo' %>
  </div>
<% end %>

<h2>Incomplete</h2>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.name %> 
      <%= link_to 'Mark as Complete', complete_task_path(task), method: :patch, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>

<h3>
</ul>
